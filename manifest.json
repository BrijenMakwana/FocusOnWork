{
    "manifest_version": 3,
    "name": "Focus on Work",
    "description": "Use this chrome extension to stop diverting your mind elsewhere. You'll not able to access sites that divert your mind from work!!",
    "version": "0.0.1",
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["Content.js"]
        }
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "author":"Brijen Makwana",
    "action": {
        "default_icon": {
          "16": "images/icon_16.png",
          "32": "images/icon_32.png",
          "48": "images/icon_48.png",
          "128": "images/icon_128.png"
        }
      },
      "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
      }
}